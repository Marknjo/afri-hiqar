{
  "extends": "@mj/tsconfig/server.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@lib/*": ["./src/lib/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", ".turbo", "coverage", "dist", "src/**/*.test.ts"]
}
