extends ../emailTMP

block content
  //- Content
  p Hi #{name},
  p You are receiving this email because you have requested to reset your account password. 
  p If you did not send this request, please ignore this email. 
  P Find your password reset token below (Copy or click the reset button link).
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Your reset link
  table
    tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td 
                    p
                      small  Or copy Token: 
                        b=` (${token})`

  table        
    tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    p PS: Your password reset session expires within the next 10 minutes.
                    br 
                    p Yours,
                    p AfriHiqar Help Desk
